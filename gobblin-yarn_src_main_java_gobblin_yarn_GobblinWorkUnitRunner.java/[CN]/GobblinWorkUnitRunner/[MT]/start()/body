{
  LOGGER.info(String.format("Starting %s in container %s",this.helixInstanceName,this.containerId));
  addShutdownHook();
  connectHelixManager();
  if (this.containerMetrics.isPresent()) {
    this.containerMetrics.get().startMetricReportingWithFileSuffix(ConfigUtils.configToState(this.config),this.containerId.toString());
  }
  this.serviceManager.startAsync();
  this.serviceManager.awaitStopped();
}
