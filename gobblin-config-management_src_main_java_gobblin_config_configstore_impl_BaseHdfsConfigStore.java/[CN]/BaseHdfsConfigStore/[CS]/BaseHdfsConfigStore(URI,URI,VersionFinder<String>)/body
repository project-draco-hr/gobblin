{
  try {
    this.storeURI=logic_root;
    this.location=new Path(physical_root);
    this.fs=FileSystem.get(physical_root,new Configuration());
  }
 catch (  IOException ioe) {
    LOG.error("can not initial the file system " + ioe.getMessage(),ioe);
