{
  try {
    Path outputTaskStateDir=new Path(this.appWorkDir,GobblinYarnConfigurationKeys.OUTPUT_TASK_STATE_DIR_NAME + Path.SEPARATOR + this.jobContext.getJobId());
    scheduleOutputTaskStatesCollector(outputTaskStateDir);
    TimingEvent jobSubmissionTimer=this.eventSubmitter.getTimingEvent(TimingEventNames.RunJobTimings.HELIX_JOB_SUBMISSION);
    submitJobToHelix(createJob(workUnits));
    jobSubmissionTimer.stop();
    LOGGER.info(String.format("Submitted job %s to Helix",this.jobContext.getJobId()));
    this.jobSubmitted=true;
    TimingEvent jobRunTimer=this.eventSubmitter.getTimingEvent(TimingEventNames.RunJobTimings.HELIX_JOB_RUN);
    waitForJobCompletion();
    jobRunTimer.stop();
    LOGGER.info(String.format("Job %s completed",this.jobContext.getJobId()));
    this.jobComplete=true;
    shutdownOutputTaskStatesCollector();
    collectOutputTaskStates(outputTaskStateDir);
  }
  finally {
    deletePersistedWorkUnitsForJob();
  }
}
