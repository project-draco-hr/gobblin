{
  Preconditions.checkNotNull(this.destination);
  Preconditions.checkArgument(!Strings.isNullOrEmpty(this.writerId));
  Preconditions.checkNotNull(this.schema);
  Preconditions.checkArgument(this.format == WriterOutputFormat.AVRO);
switch (this.destination.getType()) {
case HDFS:
    State properties=this.destination.getProperties();
  String fileName=WriterUtils.getWriterFileName(properties,this.branch,this.writerId,this.format.getExtension());
return new AvroHdfsDataWriter(properties,fileName,this.schema,this.branch);
case KAFKA:
return new AvroKafkaDataWriter();
default :
throw new RuntimeException("Unknown destination type: " + this.destination.getType());
}
}
