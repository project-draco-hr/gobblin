{
  try {
    server.close();
    LOG.info("Closed tunnel.");
  }
 catch (  IOException ioe) {
    LOG.warn("Exception during shutdown of tunnel",ioe);
  }
 finally {
    try {
      thread.interrupt();
      thread.join();
    }
 catch (    InterruptedException e) {
      throw new RuntimeException(e);
    }
  }
}
