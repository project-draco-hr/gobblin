{
  final Converter converter=getConverterForWriter();
  return new DataConverter(){
    @Override public Object convert(    Object sourceRecord) throws DataConversionException {
      try {
        return converter.convertRecord(converter.convertSchema(schemaForWriter,workUnitState),sourceRecord,workUnitState);
      }
 catch (      SchemaConversionException e) {
        throw new DataConversionException(e);
      }
    }
  }
;
}
