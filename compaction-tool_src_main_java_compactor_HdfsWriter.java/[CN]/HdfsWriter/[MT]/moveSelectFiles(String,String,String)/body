{
  FileSystem fs=getFileSystem();
  fs.mkdirs(new Path(destination));
  PathFilter pathFilter=createGlobFilterForExtension(extension);
  FileStatus[] fileStatuses=fs.listStatus(new Path(source),pathFilter);
  for (  FileStatus fileStatus : fileStatuses) {
    Path path=fileStatus.getPath();
    if (fs.getFileStatus(path).isFile() && path.toString().toLowerCase().endsWith(extension.toLowerCase())) {
      FileUtil.copy(fs,path,fs,new Path(destination),false,true,getConfiguration());
    }
  }
}
