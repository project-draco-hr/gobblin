{
  try {
    HttpUriRequest uriRequest=RequestBuilder.post().addHeader(HttpHeaders.CONTENT_TYPE,ContentType.APPLICATION_JSON.getMimeType()).setUri(new URL(getCurServerHost().toURL(),record.getResourcePath()).toURI()).setEntity(new StringEntity(record.getRestEntryVal().toString(),ContentType.APPLICATION_JSON.toString())).build();
    return Optional.of(uriRequest);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
