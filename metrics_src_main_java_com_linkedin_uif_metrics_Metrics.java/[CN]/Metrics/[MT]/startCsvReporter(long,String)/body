{
  File metricsDir=new File(metricsDirStr);
  if (!metricsDir.exists()) {
    metricsDir.mkdirs();
  }
  CsvReporter reporter=CsvReporter.forRegistry(METRICS).convertRatesTo(TimeUnit.SECONDS).convertDurationsTo(TimeUnit.MILLISECONDS).build(metricsDir);
  reporter.start(period,TimeUnit.MILLISECONDS);
}
